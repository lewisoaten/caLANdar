{
  "name": "CaLANdar devcontainer (prebuilt)",
  "image": "ghcr.io/lewisoaten/caLANdar-devcontainer:latest",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "runArgs": ["--init"],
  "postCreateCommand": "echo 'Devcontainer image pulled. Run the Copilot Agent or set COPILOT_AGENT_AUTOSTART=true to auto-run.'",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "rust-lang.rust-analyzer",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
