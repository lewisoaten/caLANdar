# Example environment file for running the API in standalone mode (without Shuttle)
# Copy this to .env and fill in your values

# Database connection URL
DATABASE_URL=postgres://postgres:postgres@localhost:5432/calandar-api

# PASETO secret key for token signing (generate with: openssl rand -hex 16)
PASETO_SECRET_KEY=your-secret-key-here

# Resend API key for sending emails
# Create at https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key

# Steam API key for game data
# Create at https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key

# Optional: Port to listen on (defaults to 8080)
PORT=8080

# Optional: Rust log level
RUST_LOG=info
